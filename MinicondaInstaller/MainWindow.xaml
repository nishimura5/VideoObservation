<Window x:Class="MinicondaInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinicondaInstaller"
        mc:Ignorable="d"
        Title="MinicondaInstaller" Height="300" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,0,20,20">
                <Run Text="Minicondaと依存ライブラリ一式をインストールします。"/>
                <LineBreak/>
                <Run Text="下のボタンをクリックするとインストールが開始されます。"/>
                <LineBreak/>
                <Run Text="インストールを実施しない場合はこの画面を閉じてください。"/>
            </TextBlock>
            <Button x:Name="InstallButton" Content="Minicondaをインストール" Click="Install_ButtonClick" Width="200" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
